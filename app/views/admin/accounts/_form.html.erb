<div class="card card-secondary form-article">
  <div class="card-header">
    <h3 class="card-title"> <%= yield(:form_type) %> </h3>
  </div>
  <div class="card-body">
    <%= simple_form_for [:admin, @account], html: {class: "form-horizontal"}  do |f| %>
      <div class="form-body">
        <div class="form-group">
          <%= f.label :name, class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.input :name, as: :string,
              input_html: { class: "form-control input-circle input-title", placeholder: "Name" },
              label: false,
              autofocus: true, disabled: true %>
          </div>
        </div>
        <div class="form-group custom-file mb-3">
          <div class="row">
            <label>Cover (1920*400)</label>
            <% if @account.image_cover.attached? %>
              <div class="image-cover col-md-12">
                <img src="<%= (url_for(@account.image_cover)) %>">
                <%= link_to 'Remove before change', delete_image_attachment_admin_account_url(@account.image_cover.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
              </div>
            <% else %>
              <div class="col-md-12">
                <div>
                  <%= f.file_field :image_cover, accept: ".jpg,.jpeg,.gif,.png", class: "custom-file-input", id: "customFile" %>
                  <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="form-group custom-file mb-3">
          <div class="row">
            <label>Avatar (150*150)</label>
            <% if @account.image.attached? %>
              <div class="image-cover col-md-12">
                <img src="<%= (url_for(@account.image)) %>">
                <%= link_to 'Remove before change', delete_image_attachment_admin_account_url(@account.image.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
              </div>
            <% else %>
              <div class="col-md-12">
                <div>
                  <%= f.file_field :image, accept: ".jpg,.jpeg,.gif,.png", class: "custom-file-input", id: "customFile" %>
                  <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="form-group slug-group">
          <%= f.label :description, class: "col-md-4 control-label" %>
          <div class="row">
            <div class="col-md-12">
              <%= f.input :description, as: :text,
                input_html: { class: "form-control input-circle", placeholder: "Description" },
                label: false,
                autofocus: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :fb_link, class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.input :fb_link, as: :string,
              input_html: { class: "form-control input-circle input-title", placeholder: "fb.com/Your_link" },
              label: false,
              autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :insta_link, class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.input :insta_link, as: :string,
              input_html: { class: "form-control input-circle input-title", placeholder: "https://www.instagram.com/Your_link" },
              label: false,
              autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :rank, class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.input :rank, as: :string,
              input_html: { class: "form-control input-circle input-title", placeholder: "" },
              label: false,
              autofocus: true, disabled: true %>
          </div>
        </div>
        <div class="form-actions">
          <div class="col-md-12">
            <%= f.submit yield(:button_text)  , class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
