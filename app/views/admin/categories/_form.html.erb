<div class="card card-secondary form-article">
  <div class="card-header">
    <h3 class="card-title"> <%= yield(:form_type) %> </h3>
  </div>
  <div class="card-body">
    <%= simple_form_for [:admin, @category], html: {class: "form-horizontal"}  do |f| %>
      <div class="form-body">
        <div class="form-group">
          <%= f.label :title, class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.input :title, as: :string,
              input_html: { class: "form-control input-circle input-title", placeholder: "Write title..." },
              label: false,
              autofocus: true %>
          </div>
        </div>
        <div class="form-group slug-group">
          <%= f.label :slug, class: "col-md-4 control-label" %>
          <div class="row">
            <div class="col-md-11">
              <%= f.input :slug, as: :string,
                input_html: { class: "form-control input-circle input-slug", placeholder: "Slug" },
                label: false,
                autofocus: true %>
            </div>
            <div class="col-md-1">
              <button type="button" class="btn btn-outline-secondary change-slug">Change slug</button>
            </div>
          </div>
        </div>
        <div class="form-group custom-file mb-3">
          <div class="row">
            <label>Banner cover (1920*600)</label>
            <% if @category.banner_cover.attached? %>
              <div class="image-cover col-md-12">
                <img src="<%= (url_for(@category.banner_cover)) %>">
                <%= link_to 'Remove before change', delete_image_attachment_admin_category_url(@category.banner_cover.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
              </div>
            <% else %>
              <div class="col-md-12">
                <div>
                  <%= f.file_field :banner_cover, accept: ".jpg,.jpeg,.gif,.png", class: "custom-file-input", id: "customFile" %>
                  <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="form-group slug-group">
          <%= f.label :description, class: "col-md-4 control-label" %>
          <div class="row">
            <div class="col-md-12">
              <%= f.input :description, as: :text,
                input_html: { class: "form-control input-circle", placeholder: "Description" },
                label: false,
                autofocus: true %>
            </div>
          </div>
        </div>
        <div class="form-group custom-file mb-3">
          <div class="row">
            <label>Image cover (260*260)</label>
            <% if @category.image.attached? %>
              <div class="image-cover col-md-12">
                <img src="<%= (url_for(@category.image)) %>">
                <%= link_to 'Remove before change', delete_image_attachment_admin_category_url(@category.image.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
              </div>
            <% else %>
              <div class="col-md-12">
                <div>
                  <%= f.file_field :image, accept: ".jpg,.jpeg,.gif,.png", class: "custom-file-input", id: "customFile" %>
                  <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="form-actions">
          <div class="col-md-12">
            <%= f.submit yield(:button_text)  , class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
