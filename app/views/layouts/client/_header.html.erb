<header id="header" class="header left-aligned-navbar" data-hs-header-options='{"fixMoment": 1000, "fixEffect": "slide"}'>
  <div class="header-section shadow-soft">
    <div id="logoAndNav" class="container-fluid px-md-5">
      <nav class="js-mega-menu navbar navbar-expand-xl py-0 position-static justify-content-start">
        <button type="button" class="navbar-toggler btn btn-icon btn-sm rounded-circle mr-2" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navBar" data-toggle="collapse" data-target="#navBar">
          <span class="navbar-toggler-default">
            <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
              <path
                fill="currentColor"
                d="M17.4,6.2H0.6C0.3,6.2,0,5.9,0,5.5V4.1c0-0.4,0.3-0.7,0.6-0.7h16.9c0.3,0,0.6,0.3,0.6,0.7v1.4C18,5.9,17.7,6.2,17.4,6.2z M17.4,14.1H0.6c-0.3,0-0.6-0.3-0.6-0.7V12c0-0.4,0.3-0.7,0.6-0.7h16.9c0.3,0,0.6,0.3,0.6,0.7v1.4C18,13.7,17.7,14.1,17.4,14.1z"
              />
            </svg>
          </span>
          <span class="navbar-toggler-toggled">
            <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
              <path
                fill="currentColor"
                d="M11.5,9.5l5-5c0.2-0.2,0.2-0.6-0.1-0.9l-1-1c-0.3-0.3-0.7-0.3-0.9-0.1l-5,5l-5-5C4.3,2.3,3.9,2.4,3.6,2.6l-1,1 C2.4,3.9,2.3,4.3,2.5,4.5l5,5l-5,5c-0.2,0.2-0.2,0.6,0.1,0.9l1,1c0.3,0.3,0.7,0.3,0.9,0.1l5-5l5,5c0.2,0.2,0.6,0.2,0.9-0.1l1-1 c0.3-0.3,0.3-0.7,0.1-0.9L11.5,9.5z"
              />
            </svg>
          </span>
        </button>

        <a class="navbar-brand w-auto mr-xl-5 mr-wd-8" href="<%= root_path %>" aria-label="Vodi">
          <span class="logo">KenhDoc.Com</span>
        </a>

        <div id="navBar" class="collapse navbar-collapse order-1 order-xl-0">
          <div class="navbar-body header-abs-top-inner">
            <ul class="navbar-nav">
              <li class="hs-has-mega-menu navbar-nav-item">
                <a id="homeMegaMenu"
                  class="hs-mega-menu-invoker nav-link nav-link-toggle font-secondary"
                  href="javascript:;"
                  aria-haspopup="true"
                  aria-expanded="false">
                  Đầu Sách
                </a>

                <div class="hs-mega-menu dropdown-menu w-100" aria-labelledby="homeMegaMenu">
                  <div class="container px-4 px-md-5 space-lg-1">
                    <div class="row row-cols-xl-5 text-md-center cate-header">
                      <% cate_header.each do |category|%>
                        <div class="col-md-6 col-lg-3 col-xl border-right border-w-lg-d-0 pb-1 pt-1">
                          <a href="<%= category_path(category) %>" class="h-g1-primary d-block">
                            <% if category.image.attached? %>
                            <%= image_tag(category.image, class: "d-none d-md-block img-fluid mb-3 rounded-sm lazy-header")%>
                            <% end %>
                            <div class="h-g1-primary font-size-23 font-weight-bold">
                              <%= category.title %>
                            </div>
                          </a>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>

              <li class="hs-has-mega-menu navbar-nav-item">
                <a id="moviesMegaMenu" class="hs-mega-menu-invoker nav-link nav-link-toggle font-secondary" href="javascript:;" aria-haspopup="true" aria-expanded="false">Mỗi ngày một cuốn sách</a>

                <div class="hs-mega-menu dropdown-menu w-100" aria-labelledby="moviesMegaMenu">
                  <div class="mega-menu-body">
                    <div class="container px-lg-5">
                      <div class="row row-cols-md-3 mx-lg-n5">
                        <div class="col-md-4 px-lg-5 mb-4 mb-md-0 border-right">
                          <div class="font-size-14 text-dark font-weight-bold mb-3">
                            Cuốn sách của ngày
                          </div>
                          <div class="row mx-n2 product">
                            <div class="col-auto">
                              <div class="product-image mb-2">
                                <%= link_to post_path(post_today), class: "d-inline-block position-relative stretched-link" do %>
                                  <%= image_tag(post_today.image_cover, class: "img-fluid lazy-header") %>
                                <% end %>
                              </div>
                            </div>
                            <div class="col">
                              <div class="product-title font-weight-bold font-size-1 mb-2d">
                                <%= link_to post_today.name, post_path(post_today) %>
                              </div>
                              <div class="product-meta font-size-12 mb-1">
                                <span>
                                  <%= link_to author_path(post_today.author), class: "h-g-primary" do %>
                                    <%= post_today.author.name %>
                                  <% end %>
                                </span>
                                <span>
                                  <a class="h-g-primary" href="javascript:;">xuất bản: <%= post_today.release_date %></a>
                                </span>
                              </div>
                              <p class="text-gray-7100 font-size-13 line-clamp-5">
                                <%= post_today.description %>
                              </p>
                              <div class="d-flex">
                                <%= link_to post_path(post_today), class: "font-size-14 font-secondary font-weight-bold mr-4" do %>
                                  Đọc Ngay
                                <% end %>
                                <% if post_today.buy_link.present? %>
                                  <%= link_to post_today.buy_link, class: "font-size-14 font-secondary font-weight-bold h-g1-primary" do %>
                                    + Đặt sách
                                  <% end %>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-8 px-lg-5 mb-4 mb-md-0">
                          <div class="font-size-14 text-dark font-weight-bold mb-3">
                            Có thể bạn quan tâm
                          </div>
                          <ul class="column-count-6 v2 list-unstyled mb-0">
                            <% colllection_header.each do |post| %>
                              <li class="py-1">
                                <%= link_to post_path(post), class: "h-b-primary py-1 font-size-14" do %>
                                  <%= image_tag(post.image_cover, class: "img-fluid w-100 lazy-header", alt: "Image cover #{post.name}") %>
                                  <span class="h-sm-none"><%= truncate(post.name, length: 40, omission: "...") %></span>
                                <% end %>
                              </li>
                            <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </li>

              <li class="hs-has-sub-menu navbar-nav-item">
                <a id="docsMegaMenu" class="hs-mega-menu-invoker nav-link nav-link-toggle font-secondary" href="javascript:;" aria-haspopup="true" aria-expanded="false">Mách bạn "mẹo nhỏ"</a>
                <div class="hs-sub-menu dropdown-menu mega-menu-sub-menu-md" aria-labelledby="docsMegaMenu">
                  <% tips_header.each do |post|%>
                  <div class="navbar-promo-item">
                    <%= link_to post_path(post), class: "navbar-promo-link" do %>
                      <div class="media align-items-center">
                        <i class="fas fa-book font-size-34 mr-2d"></i>
                        <div class="media-body">
                          <span class="navbar-promo-title">
                            <%= post.name %>
                            <span class="badge badge-primary badge-pill ml-1">tips</span>
                          </span>
                          <small class="navbar-promo-text"><%= post.description %></small>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  <% end %>
                </div>
              </li>
            </ul>
          </div>
        </div>

        <div class="d-flex align-items-center ml-auto">
          <form class="d-none d-xl-block" id="search_form">
            <label class="sr-only">Search</label>
            <div class="input-group">
              <input
                type="text"
                class="search-form-control form-control py-2 pl-4 min-width-250 rounded-pill"
                id="searchproduct-item"
                placeholder="Tìm kiếm ..."
              />
              <div class="input-group-append position-absolute top-0 bottom-0 right-0 z-index-4">
                <button class="d-flex py-2 px-3 border-0 bg-transparent align-items-center" type="button" id="search_post">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" style="fill: #656565;">
                    <path
                      d="M7 0C11-0.1 13.4 2.1 14.6 4.9 15.5 7.1 14.9 9.8 13.9 11.4 13.7 11.7 13.6 12 13.3 12.2 13.4 12.5 14.2 13.1 14.4 13.4 15.4 14.3 16.3 15.2 17.2 16.1 17.5 16.4 18.2 16.9 18 17.5 17.9 17.6 17.9 17.7 17.8 17.8 17.2 18.3 16.7 17.8 16.4 17.4 15.4 16.4 14.3 15.4 13.3 14.3 13 14.1 12.8 13.8 12.5 13.6 12.4 13.5 12.3 13.3 12.2 13.3 12 13.4 11.5 13.8 11.3 14 10.7 14.4 9.9 14.6 9.2 14.8 8.9 14.9 8.6 14.9 8.3 14.9 8 15 7.4 15.1 7.1 15 6.3 14.8 5.6 14.8 4.9 14.5 2.7 13.6 1.1 12.1 0.4 9.7 0 8.7-0.2 7.1 0.2 6 0.3 5.3 0.5 4.6 0.9 4 1.8 2.4 3 1.3 4.7 0.5 5.2 0.3 5.7 0.2 6.3 0.1 6.5 0 6.8 0.1 7 0ZM7.3 1.5C7.1 1.6 6.8 1.5 6.7 1.5 6.2 1.6 5.8 1.7 5.4 1.9 3.7 2.5 2.6 3.7 1.9 5.4 1.7 5.8 1.7 6.2 1.6 6.6 1.4 7.4 1.6 8.5 1.8 9.1 2.4 11.1 3.5 12.3 5.3 13 5.9 13.3 6.6 13.5 7.5 13.5 7.7 13.5 7.9 13.5 8.1 13.5 8.6 13.4 9.1 13.3 9.6 13.1 11.2 12.5 12.4 11.4 13.1 9.8 13.6 8.5 13.6 6.6 13.1 5.3 12.2 3.1 10.4 1.5 7.3 1.5Z"
                    ></path>
                  </svg>
                </button>
              </div>
            </div>
          </form>
          <div class="d-inline-flex ml-md-5">
            <ul class="d-flex list-unstyled mb-0 align-items-center">
              <li class="col pr-xl-0 px-2 px-sm-3">
                <% if account_signed_in? %>
                  <div class="hs-unfold">
                    <a
                      class="js-hs-unfold-invoker dropdown-nav-link dropdown-toggle py-4 position-relative d-flex align-items-center"
                      href="javascript:;"
                      data-hs-unfold-options='{
                        "target": "#basicDropdownHover",
                        "type": "css-animation",
                        "event": "click"
                      }'
                    >
                      <img src="<%= current_account.avatar %>" alt="avatar" style="width: 32px; border-radius: 50%;">
                    </a>
                    <div id="basicDropdownHover" class="hs-unfold-content dropdown-menu my-account-dropdown">
                      <div class="top">
                        <a href="" title="" class="ava">
                          <img src="<%= current_account.avatar %>" alt="avatar">
                        </a>
                        <h3 class="name"><%= current_account.name %></h3>
                        <span class="<%= current_account.rank %>"><%= t("rank.#{current_account.rank}") %></span>
                      </div>
                      <ul class="info">
                        <li>
                          <strong><%= current_account.email %></strong>
                        </li>
                      </ul>
                      <div class="bottom">
                        <%= link_to(account_path(current_account), class: "smooth r-his") do %>
                          Trang cá nhân
                        <% end %>

                        <%= link_to(destroy_account_session_path) do %>
                          <i class="fas fa-sign-out-alt"></i> logout
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% else %>
                  <div class="hs-unfold">
                    <a
                      class="js-hs-unfold-invoker dropdown-nav-link dropdown-toggle py-4 position-relative d-flex align-items-center"
                      href="javascript:;"
                      data-hs-unfold-options='{
                        "target": "#basicDropdownHover",
                        "type": "css-animation",
                        "event": "click"
                      }'
                    >
                      <svg width="32px" height="32px">
                        <image
                          x="0px"
                          y="0px"
                          width="32px"
                          height="32px"
                          xlink:href="data:img/png;base64,"
                        ></image>
                      </svg>
                    </a>
                    <div id="basicDropdownHover" class="hs-unfold-content dropdown-menu my-account-dropdown-not-login">
                      <%= link_to(account_facebook_omniauth_authorize_path, class: "dropdown-item") do %>
                        <i class="fab fa-facebook-f "></i> Sign in with facebook
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
</header>
